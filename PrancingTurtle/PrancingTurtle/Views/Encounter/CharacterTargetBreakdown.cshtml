@using PrancingTurtle.Models.ViewModels
@model PrancingTurtle.Models.ViewModels.Encounter.CharacterTargetBreakdownVM
@{
    ViewBag.Title = string.Format("{0} ({1})", Model.Encounter.BossFight.Name, Model.Encounter.Duration);
}

@Html.Partial("_EncounterNav2", new EncounterNav(Model.Encounter.Id,
        Model.Encounter.BossFight.Name, Model.Encounter.BossFight.Instance.Name,
        Model.Encounter.Duration, Model.Encounter.SuccessfulKill), new ViewDataDictionary { { "link", "targetbreakdown" } })

<a name="top">&nbsp;</a>

<div class="container container-fluid">
    <div class="row">
        <div class="col-lg-8 col-centered">
            <div class="bs-callout @string.Format(Model.Encounter.SuccessfulKill ? "bs-callout-success" : "bs-callout-danger")">
                <h3 class="text-center">Target breakdown for @Model.CharacterName</h3>
                <h5 class="text-center">@Html.Raw(string.Format("<b>Date:</b> {0} | <b>Fight Length:</b> {1}", Model.Encounter.Date, Model.Encounter.Duration))</h5>
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th class="text-center">Target</th>
                            <th class="text-center">@Model.TotalText</th>
                            <th class="text-center">@Model.AverageText</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td class="text-center"><b>@item.TargetName</b></td>
                                <td class="text-center">@item.Total</td>
                                <td class="text-center">@item.Average</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

        <p class="text-center text-muted">Page built in @Model.BuildTime</p>
    </div>
</div>