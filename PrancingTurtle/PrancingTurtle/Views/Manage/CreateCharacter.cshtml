@using PrancingTurtle.Helpers
@model Database.Models.AuthUserCharacter

@{
    ViewBag.Title = "Create Character";
}

<h2>Create Character</h2>

<div class="row">
    <div class="col-md-5">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Create a character</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(false)
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.CharacterName, new {@class="control-label col-md-3"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.CharacterName, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ShardId, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.ShardId, new SelectList(Model.Shards, "Id", "DisplayName", Model.ShardId), new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="panel-footer">
                @Html.ImageActionLink("Index", "", "fa fa-lg fa-arrow-circle-left", "Back")
            </div>
        </div>
    </div>
</div>