@using PrancingTurtle.Helpers
@model PrancingTurtle.Models.ViewModels.ChangeTimeZoneVM

@{
    ViewBag.Title = "Change Timezone";
}

<br/>

<div class="row">
    <div class="col-md-7">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Change Timezone</h3>
            </div>
            <div class="panel-body">
                <p>Timezones displayed are shown without Daylight Saving Time, regardless of whether it's currently DST locally.</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @Html.Label("Timezone", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.SelectedTimeZoneId, new SelectList(Model.TimeZones, "Id", "DisplayName", Model.SelectedTimeZoneId), new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="panel-footer">
                @Html.ImageActionLink("Index", "", "fa fa-lg fa-arrow-circle-left", "Back")
            </div>
        </div>
    </div>
</div>