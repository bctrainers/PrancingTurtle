@using PrancingTurtle.Helpers
@model PrancingTurtle.Models.ViewModels.CreateGuildVM

@{
    ViewBag.Title = "Create Guild";
}

<div class="row">
    <div class="col-md-8 col-centered">
        <h2>Create a new guild on @Model.ShardName</h2>
        <br />
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Guild details</h3>
            </div>
            <div class="panel-body">
                <p>Guild names are not filtered as you create them on this page, but we reserve the right to rename or request the renaming of guilds that are created with offensive names.</p>
                <p>While we don't foresee this being an issue, if offensive names are reported, action will be taken.</p>
                <br/>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(false)
                        @Html.HiddenFor(model => model.AuthUserCharacterId)
                        @Html.HiddenFor(model => model.ShardId)
                        @Html.HiddenFor(model => model.ShardName)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-3"})
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Create" class="btn btn-success"/>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="panel-footer">
                @Html.ImageActionLink("Index", "text-info", "fa fa-lg fa-arrow-circle-left", "Back")
            </div>
        </div>
    </div>
</div>